<div class='container'>
  <div class="row" style="text-center; margin-top: 30px">
    <table class="table table-hover table-responsive table-bordered">
      <tr>
        <th>CITY(full_name)</th>
        <th>CITY(short_name)</th>
      </tr>
      <% @cities.each do |city| %>

      <tr>
        <td><%= link_to city.name, city %></td>
        <td><%= link_to city.short_name, city %></td>
      </tr>

      <% end %>
    </table>
  </div>
</div>